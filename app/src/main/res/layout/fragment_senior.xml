<!-- res/layout/fragment_senior.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/nome_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome" />

    <EditText
        android:id="@+id/data_nascimento_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento" />

    <EditText
        android:id="@+id/bairro_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro" />

    <CheckBox
        android:id="@+id/problemas_cardiacos_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problemas CardÃ­acos" />

    <Button
        android:id="@+id/cadastrar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />
</LinearLayout>
